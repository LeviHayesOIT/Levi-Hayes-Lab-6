@model TreaterModel

@{
    ViewData["Title"] = "Home Page";
}

<body>
    <form method="post" asp-action="Create" asp-controller="Candy">
        <div class="row">
            <div class="form-group col-sm-4">
                <label asp-for="CandyName" class="control-label"></label>
                <input asp-for="CandyName" class="form-control" />
                <span asp-validation-for="CandyName" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-default" value="Model">Create</button>
    </form>
    <br />
    <div>
        <h2>Current Treaters</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var candy in Model.CandyList)
                {
                    <tr>
                        <td>
                            @candy.productName
                        </td>
                        <td>
                            <form method="post" asp-action="Delete" asp-controller="Candy">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@candy.id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
